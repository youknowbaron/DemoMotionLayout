<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
            motion:constraintSetEnd="@+id/end"
            motion:constraintSetStart="@+id/start"
            motion:duration="1000"
            motion:interpolator="linear">

        <OnSwipe
                motion:touchAnchorId="@+id/imvBackground"
                motion:touchAnchorSide="bottom"
                motion:dragDirection="dragUp"/>
        <KeyFrameSet>

            <!--*****************deltaRelative**********************
                - A là điểm bắt đầu, B là điểm kết thúc
                - tọa độ Oxy
                - Ox có phương và chiều trùng với hình chiếu của AB lên chiều ngang màn hình
                - Oy có phương và chiều trùng với hình chiếu của AB lên chiều dọc màn hình
                -->
            <KeyPosition
                    motion:framePosition="37"
                    motion:percentX="-0.2585034"
                    motion:percentY="0.50630915"
                    motion:target="@id/icArrow"
                    motion:keyPositionType="deltaRelative"/>
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
                android:id="@id/imvBackground"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_editor_absoluteX="0dp"
                motion:layout_editor_absoluteY="0dp"/>

        <Constraint
                android:id="@id/ibEx"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"/>

        <Constraint
                android:id="@+id/nsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:alpha="0"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toBottomOf="@+id/imvBackground"/>

        <Constraint
                android:id="@id/icArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:rotation="0"
                motion:layout_constraintBottom_toBottomOf="@+id/ibEx"
                motion:layout_constraintEnd_toStartOf="@+id/ibEx"
                motion:layout_constraintTop_toTopOf="@+id/ibEx"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
                android:id="@id/imvBackground"
                android:layout_width="0dp"
                android:layout_height="230dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="-1dp"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintTop_toTopOf="parent"/>

        <Constraint
                android:id="@id/ibEx"
                android:layout_width="56dp"
                android:layout_height="56dp"
                motion:layout_constraintBottom_toBottomOf="@+id/imvBackground"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toBottomOf="@+id/imvBackground"/>

        <Constraint
                android:id="@+id/nsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:alpha="1"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toBottomOf="@+id/imvBackground"/>

        <Constraint
                android:id="@id/icArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="0dp"
                android:rotation="90"
                motion:layout_constraintBottom_toBottomOf="@+id/imvBackground"
                motion:layout_constraintEnd_toEndOf="parent"/>
    </ConstraintSet>

</MotionScene>
